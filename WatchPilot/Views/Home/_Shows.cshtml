@model List<ShowViewModel>
@if (Model != null)
{
    <div class="row">
        @foreach (var show in Model)
        {
            <a href="@Url.Action("GetShowDetails", "Show", new { showID = show.ShowID, showOverviewID = show.ShowOverViewID})">
                <div class="col-md-4"> 
                    <div class="show-tile">
                        <h3 class="show-title">@show.Title</h3>
                        <img src="@show.Picture" alt="@show.Title" class="img-fluid">
                        <p>Episodes: @show.TotalEpisodes</p>
                    </div>
                </div>
            </a>
        }
    </div>
}