@model ShowDetailsViewModel

@{
    ViewData["Title"] = "Show Details";
}

<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">@Model.Title</h1>
                <div class="dropdown text-center">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        ☰
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editShowModal">Edit</a>
                        <a class="dropdown-item" href="#">Delete</a>
                    </div>
                </div>
                

            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6">
                <img src="@Model.Picture" alt="Show Image" class="img-fluid">
            </div>
            <div class="col-md-6">
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6">
                <div>
                    <p>Current Episode: @Model.CurrentEpisode</p>
                    <p>Total Episodes: @Model.TotalEpisodes</p>
                </div>
            </div>
            <div class="col-md-6">
                <button class="btn btn-primary btn-block">Continue Watching</button>
            </div>
        </div>
    </div>
    <div id="partialEditShow"></div>
</body>


@section Scripts {
    <script>

            $(document).ready(function () {
                try {
                $('#partialEditShow').load("/Show/EditShowLoad", { showID: @Model.ShowID, showOverviewID: @Model.ShowOverViewID });
                } catch (error) {
                    console.error(error);
                }
            });
        
    </script>
}